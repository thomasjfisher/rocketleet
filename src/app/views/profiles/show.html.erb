<div class="container">
<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @profile.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @profile.last_name %>
</p>

<p>
  <strong>User:</strong>
  <%= @profile.user_id %>
</p>
<br>
<%= link_to 'Edit', edit_profile_path(@profile) %> |
<%= link_to 'Back', profiles_path %>
<%# Added separate rows for bought items and listed items. Each profile has access to what items they have bought and sold. %>
<br>
<br>
<h1>Bought Items</h1> 
<br>
<div class="row">
  <% @profile.listings_to_buy.each do |listing| %>
  <div class= "col-md-3">
    <div class="card" style="width: 18rem;">
      <%=image_tag listing.picture, class: "card-img-top" %>
      <div class="card-body">
        <h5 class="card-title">  <%= listing.item_name %></h5>
        <p class="card-text">  <%= listing.description %>.</p>
        <a href="#" class="btn btn-primary">Download Item Now!</a>
        <div>
        </div>
        <br>
        <br>
        <a href="/" class="btn btn-primary">Back to Main Menu!</a>
      </div>
    </div>
  </div>
  <% end %>
  </div>
</div>
<br>
<br>
<%# Added separate rows for bought items and listed items. Each profile has access to what items they have bought and sold. %>
<h1>Listed Items</h1>
<br>
<div class="row">
  <% @profile.listings_to_sell.each do |listing| %>
  <div class= "col-md-3">
    <div class="card" style="width: 18rem;">
      <%=image_tag listing.picture, class: "card-img-top" %>
      <div class="card-body">
        <h5 class="card-title">  <%= listing.item_name %></h5>
        <p class="card-text">  <%= listing.description %>.</p>
        <a href="/" class="btn btn-primary">Back to Main Menu!</a>
    </div>
    </div>
  </div>
  <% end %>
  </div>


</div>
</div>

</div>